<!doctype html>
<html class="no-js" lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="x-ua-compatible" content="ie=edge">
		<title>Signup - Bookya</title>
		<meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="css/signin.css">
    <script src="js/vendor/modernizr-2.8.3.min.js"></script>
	</head>
	<body>
		<!-- Topbar -->
		<div id="top" class="top">
			<div class="container">
				<div class="top_logo">
					<a href="#">bookya</a>
				</div>
				<div class="top_accmgmt">
					Do not have an account? <a href="#">Sign Up</a>
				</div>
			</div>

		</div>

		<!-- Content -->
		<main role="main" class="main main_signin">
			<div class="container">
				<div class="row">
					<div class="signin">
						<header role="banner" class="signin_header">
							<h1>Hello, Welcome Back</h1>
							<p>We miss you so much, quickly sign in now</p>
						</header>
						<div class="signin_block">
							<div class="signin_social">
								<a href="#" class="btn btn-facebook">Connect with Facebook</a>
								<a href="#" class="btn btn-soundcloud">Connect with SoundCloud</a>
							</div>
							<span class="spacing">or</span>
							<div class="signin_input">
								<form action="" method="post">
									<div class="form-group">
										<input name="user-email" id="user-email" type="email" placeholder="Email">
										<label for="user-email">Email</label>
									</div>
									<div class="form-group">
										<input name="user-password" id="user-password" type="password" placeholder="password">
										<label for="user-password">Password</label>
									</div>
									<span class="spacing"></span>
									<div class="form-group form-group__action">
										<button type="submit" class="btn btn-green">Sign In</button>
										<div class="form-group_rescue">
											<a href="#">Oops, I forgot my password</a>
										</div>
									</div>
								</form>

							</div>
							<div class="signin_backtohome">
								<a href="#">Return Home</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>

		<!-- Footer -->
		<footer class="footer" role="contentinfo">
			<div class="container">
				<div class="footer_nav">
					<nav role="navigation" class="footer_nav__main">
						<ul>
							<li><a href="#">About</a></li>
							<li><a href="#">Careers</a></li>
							<li><a href="#">Contact Us</a></li>
							<li><a href="#">Privacy &amp; Legal</a></li>
							<li><a href="#">Terms &amp; Conditions</a></li>
						</ul>
					</nav>
					<div class="footer_nav__social">
						<ul>
							<li><a href="#">Facebook</a></li>
							<li><a href="#">Twitter</a></li>
							<li><a href="#">Google+</a></li>
							<li><a href="#">Instagram</a></li>
						</ul>
					</div>
					<div class="footer_copyright">
						<small>&copy; 2014 <a href="#">Bookya</a> Inc. All rights reserved.</small>
					</div>
				</div>
			</div>


		</footer>


	</body>
</html>